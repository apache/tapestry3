<?xml version="1.0"?>
<!-- $Id$ -->
<!DOCTYPE specification PUBLIC "-//Primix Solutions//Tapestry Specification 1.0//EN"  
	"http://tapestry.sourceforge.net/dtd/Tapestry_1_0.dtd">
<specification>
	<class>com.primix.tapestry.pages.Exception</class>
	<components>
		<component>
			<id>shell</id>
			<type>Shell</type>
			<bindings>
				<static-binding>
					<name>title</name>
					<value>Exception</value>
				</static-binding>
				<binding>
					<name>stylesheet</name>
					<property-path>assets.stylesheet</property-path>
				</binding>
			</bindings>
		</component>
		<component>
			<id>exceptionDisplay</id>
			<type>ExceptionDisplay</type>
			<bindings>
				<binding>
					<name>exceptions</name>
					<property-path>exceptions</property-path>
				</binding>
			</bindings>
		</component>
		<component>
			<id>restart</id>
			<type>Service</type>
			<bindings>
				<field-binding>
					<name>service</name>
					<field-name>com.primix.tapestry.IApplicationService.RESTART_SERVICE</field-name>
				</field-binding>
			</bindings>
		</component>
		<component>
			<id>showDebug</id>
			<type>Delegator</type>
			<bindings>
				<binding>
					<name>delegate</name>
					<property-path>showDebugDelegate</property-path>
				</binding>
			</bindings>
		</component>
	</components>
	<assets>
		<private-asset>
			<name>stylesheet</name>
			<resource-path>/com/primix/tapestry/pages/Exception.css</resource-path>
		</private-asset>
	</assets>
</specification>
