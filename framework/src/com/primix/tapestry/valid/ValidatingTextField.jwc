<?xml version="1.0"?>
<!DOCTYPE specification PUBLIC "-//Primix Solutions//Tapestry Specification 1.0//EN"
"http://tapestry.sourceforge.net/dtd/Tapestry_1_0.dtd">
<specification>
	<class>com.primix.tapestry.components.html.valid.ValidatingTextField</class>
	<allow-body>no</allow-body>
	<parameters>
		<allow-informal-parameters>yes</allow-informal-parameters>
		<parameter>
			<name>delegate</name>
			<java-type>com.primix.tapestry.components.html.valid.IValidationDelegate</java-type>
			<required>yes</required>
		</parameter>
		<parameter>
			<name>displayName</name>
			<java-type>java.lang.String</java-type>
			<required>yes</required>
		</parameter>
		<parameter>
			<name>minimumLength</name>
			<java-type>java.lang.Integer</java-type>
		</parameter>
		<parameter>
			<name>required</name>
		</parameter>
		<parameter>
			<name>text</name>
			<java-type>java.lang.String</java-type>
			<required>yes</required>
		</parameter>
	</parameters>
	<components>
		<component>
			<id>captive</id>
			<type>TextField</type>
			<bindings>
				<binding>
					<name>text</name>
					<property-path>text</property-path>
				</binding>
			</bindings>
		</component>
	</components>
</specification>
