<mock-test>
    <context name="c15" root="context15"/>

  	<servlet name="assets" class="org.apache.tapestry.ApplicationServlet">
  		<init-parameter name="org.apache.tapestry.asset.dir" value=".private"/>
  		<init-parameter name="org.apache.tapestry.asset.URL" value="/private"/>
  	</servlet>

	<request>
		<assert-output name="Page Title">
<![CDATA[
<title>Externalized Assets</title>
]]>
		</assert-output>
		
		<assert-output name="Image URL">
<![CDATA[
<img src="/private/org/apache/tapestry/contrib/inspector/tapestry-logo.gif" border="0" name="rollover"/>
]]>		
		</assert-output>
	</request>
	
	<!-- Redo the request, to ensure that caching works. -->
	
	<request>
		<assert-output name="Page Title">
<![CDATA[
<title>Externalized Assets</title>
]]>
		</assert-output>
		
		<assert-output name="Image URL">
<![CDATA[
<img src="/private/org/apache/tapestry/contrib/inspector/tapestry-logo.gif" border="0" name="rollover"/>
]]>		
		</assert-output>
	</request>	
</mock-test>