<?xml version="1.0"?>
<!--$Id$ -->
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 1.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
  <display-name>Primix Virtual Library Demo</display-name>
  <context-param>
    <param-name>com.primix.tapestry.asset.dir</param-name>
    <param-value>.build/private-assets</param-value>
  </context-param>
  <context-param>
    <param-name>com.primix.tapestry.asset.URL</param-name>
    <param-value>/private-assets</param-value>
  </context-param>
  <servlet>
    <servlet-name>vlib</servlet-name>
    <servlet-class>com.primix.vlib.VirtualLibraryServlet</servlet-class>
  </servlet>
  <!--The single mapping used for the Tapestry application-->
  <servlet-mapping>
    <servlet-name>vlib</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
