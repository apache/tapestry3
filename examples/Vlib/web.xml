<?xml version="1.0"?>
<!--$Id$ -->
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 1.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
	<display-name>Primix Virtual Library Demo</display-name>
	<servlet>
		<servlet-name>vlib</servlet-name>
		<servlet-class>com.primix.vlib.VirtualLibraryServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.primix.vlib.jsp.HomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.primix.vlib.jsp.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>book</servlet-name>
		<servlet-class>com.primix.vlib.jsp.BookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>person</servlet-name>
		<servlet-class>com.primix.vlib.jsp.PersonServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>mybooks</servlet-name>
		<servlet-class>com.primix.vlib.jsp.MyBooksServlet</servlet-class>
	</servlet>
	<!--The single mapping used for the Tapestry application-->
	<servlet-mapping>
		<servlet-name>vlib</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>
	<!--The remaining mappings are used for the pages in the JSP version.-->
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>book</servlet-name>
		<url-pattern>/book/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>person</servlet-name>
		<url-pattern>/person/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mybooks</servlet-name>
		<url-pattern>/mybooks/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
