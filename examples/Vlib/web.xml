<?xml version="1.0"?>
<!--$Id$ -->
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 1.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
	<display-name>Primix Virtual Library Demo</display-name>
	<servlet>
		<servlet-name>vlib</servlet-name>
		<servlet-class>com.primix.vlib.VirtualLibraryServlet</servlet-class>
		<init-param>
			<param-name>com.primix.tapestry.context-path</param-name>
			<param-value>/vlib</param-value>
			<description>Context path, prepended to the servlet path.  This is
the same as the value returned by HttpServletRequest.getContextPath()
in the Java Servlet API 2.2 ... but Tapestry uses the 2.1 API.
      </description>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.primix.vlib.jsp.HomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.primix.vlib.jsp.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>vlib</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login/*</url-pattern>
	</servlet-mapping>
	<ejb-ref>
		<ejb-ref-name>ejb/Person</ejb-ref-name>
		<ejb-ref-type>Entity</ejb-ref-type>
		<home>com.primix.vlib.ejb.IPersonHome</home>
		<remote>com.primix.vlib.ejb.IPerson</remote>
	</ejb-ref>
	<ejb-ref>
		<ejb-ref-name>ejb/Book</ejb-ref-name>
		<ejb-ref-type>Entity</ejb-ref-type>
		<home>com.primix.vlib.ejb.IBookHome</home>
		<remote>com.primix.vlib.ejb.IBook</remote>
	</ejb-ref>
	<ejb-ref>
		<ejb-ref-name>ejb/Publisher</ejb-ref-name>
		<ejb-ref-type>Entity</ejb-ref-type>
		<home>com.primix.vlib.ejb.IPublisherHome</home>
		<remote>com.primix.vlib.ejb.IPublisher</remote>
	</ejb-ref>
	<ejb-ref>
		<ejb-ref-name>ejb/BookQuery</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<home>com.primix.vlib.ejb.IBookQueryHome</home>
		<remote>com.primix.vlib.ejb.IBookQuery</remote>
	</ejb-ref>
	<ejb-ref>
		<ejb-ref-name>ejb/Operations</ejb-ref-name>
		<ejb-ref-type>Session</ejb-ref-type>
		<home>com.primix.vlib.ejb.IVlibOperationsHome</home>
		<remote>com.primix.vlib.ejb.IVlibOperations</remote>
	</ejb-ref>
</web-app>
