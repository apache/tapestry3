<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id $ -->
<!DOCTYPE component-specification PUBLIC 
	"-//Howard Lewis Ship//Tapestry Specification 1.3//EN" 
	"http://tapestry.sf.net/dtd/Tapestry_1_3.dtd" [

<!ENTITY listener '<binding name="listener" expression="listeners.jump"/>'>

]>
	
<component-specification 
	allow-informal-parameters="no" 
	class="net.sf.tapestry.vlib.components.Browser">

  <parameter name="query" required="yes" java-type="net.sf.tapestry.vlib.IBookQuery"/>

  <component id="insertRange" type="Insert">
    <binding name="value" expression="range"/>
  </component>
      
  <component id="renderBody" type="RenderBody"/>
  
  <component id="ifResults" type="Conditional">
  	<binding name="condition" expression="resultCount"/>
  </component>
  
  <component id="ifShowPrev" type="Conditional">
    <binding name="condition" expression="currentPage > 1"/>
  </component>
   
  <component id="prev" type="DirectLink">
    &listener;
    <binding name="parameters" expression="@@max(currentPage - 1, 1)"/>
  </component>
 
  <component id="ifShowNext" type="Conditional">
    <binding name="condition" expression="currentPage &lt; pageCount"/>
  </component>
  
  <component id="next" type="DirectLink">
    &listener;
    <binding name="parameters" expression="@@min(currentPage + 1, pageCount)"/>
  </component>

</component-specification>

