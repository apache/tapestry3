<!DOCTYPE specification PUBLIC "-//Howard Ship//Tapestry Specification 1.1//EN" "http://tapestry.sf.net/dtd/Tapestry_1_1.dtd">
<specification class="net.sf.tapestry.BaseComponent" allow-informal-parameters="no">

  <parameter name="delegate" java-type="net.sf.tapestry.valid.IValidationDelegate" required="yes"/>
  
  <component id="ifError" type="Conditional">
    <binding name="condition" property-path="bindings.delegate.object.hasErrors"/>
  </component>
  <component id="insertError" type="Delegator">
    <binding name="delegate" property-path="bindings.delegate.object.firstError"/>
  </component>
</specification>
