<!DOCTYPE component-specification PUBLIC
	"-//Howard Lewis Ship//Tapestry Specification 1.3//EN" 
	"http://tapestry.sf.net/dtd/Tapestry_1_3.dtd">
	
<component-specification 
	class="net.sf.tapestry.vlib.components.PersonLink" 
	allow-body="no" 
	allow-informal-parameters="no">
  
  <parameter name="name" java-type="java.lang.String" required="yes" direction="in"/>
  
  <parameter name="primaryKey" java-type="java.lang.Integer" required="yes" direction="in"/>
  
  <parameter name="omit" java-type="boolean" direction="in"/>
  
  <parameter name="class" property-name="styleClass" java-type="java.lang.String" direction="in"/>
  
  <component id="ifShowLink" type="Conditional">
  	<binding name="condition" expression="omit"/>
    <field-binding name="invert" field-name="Boolean.TRUE"/>
  </component>
  
  <component id="link" type="ServiceLink">
    <field-binding name="service" field-name="net.sf.tapestry.vlib.ExternalService.SERVICE_NAME"/>
    <binding name="parameters" expression="{ &quot;Person&quot;, primaryKey }"/>
    <binding name="class" expression="styleClass"/>
  </component>
  
  <component id="insertPersonName" type="Insert">
    <inherited-binding name="value" parameter-name="name"/>
  </component>
  
  <component id="ifOmitLink" type="Conditional">
  	<binding name="condition" expression="omit"/>
  </component>
  
</component-specification>
