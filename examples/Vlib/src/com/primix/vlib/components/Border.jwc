<!DOCTYPE specification PUBLIC "-//Primix Solutions//Tapestry Specification 1.0//EN"  "http://tapestry.primix.com/dtd/Tapestry_1_0.dtd">
<specification>
	<class>com.primix.tapestry.BaseComponent</class>
	<parameters>
		<allow-informal-parameters>no</allow-informal-parameters>
		<parameter>
			<name>title</name>
			<java-type>java.lang.String</java-type>
		</parameter>
	</parameters>
	<components>
		<component>
			<id>body</id>
			<type>Body</type>
		</component>
		<component>
			<id>insertPageTitle</id>
			<type>Insert</type>
			<bindings>
				<inherited-binding>
					<name>value</name>
					<parameter-name>title</parameter-name>
				</inherited-binding>
			</bindings>
		</component>
		<component>
			<id>homeLink</id>
			<type>Service</type>
			<bindings>
				<static-binding>
					<name>service</name>
					<value>home</value>
				</static-binding>
			</bindings>
		</component>
		<component>
			<id>linkToMyBooks</id>
			<type>Direct</type>
			<bindings>
				<binding>
					<name>listener</name>
					<property-path>page.application.myBooksListener</property-path>
				</binding>
				<binding>
					<name>enabled</name>
					<property-path>page.application.userLoggedIn</property-path>
				</binding>
			</bindings>
		</component>
		<component>
			<id>ifLoggedIn</id>
			<type>Conditional</type>
			<bindings>
				<binding>
					<name>condition</name>
					<property-path>page.application.userLoggedIn</property-path>
				</binding>
			</bindings>
		</component>
		<component>
			<id>insertUserName</id>
			<type>Insert</type>
			<bindings>
				<binding>
					<name>value</name>
					<property-path>page.application.user.naturalName</property-path>
				</binding>
			</bindings>
		</component>
		<component>
			<id>ifLoggedOff</id>
			<type>Conditional</type>
			<bindings>
				<binding>
					<name>condition</name>
					<property-path>page.application.userLoggedIn</property-path>
				</binding>
				<static-binding>
					<name>invert</name>
					<value>yes</value>
				</static-binding>
			</bindings>
		</component>
		<component>
			<id>linkToLogin</id>
			<type>Page</type>
			<bindings>
				<static-binding>
					<name>page</name>
					<value>login</value>
				</static-binding>
			</bindings>
		</component>
		<component>
			<id>actionLogout</id>
			<type>Direct</type>
			<bindings>
				<binding>
					<name>listener</name>
					<property-path>page.application.logoutListener</property-path>
				</binding>
				<binding>
					<name>enabled</name>
					<property-path>page.application.userLoggedIn</property-path>
				</binding>
			</bindings>
		</component>
		<component>
			<id>wrapped</id>
			<type>InsertWrapped</type>
		</component>
	</components>
</specification>
