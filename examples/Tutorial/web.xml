<?xml version="1.0"?>
<!--$Id$ -->
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
  <display-name>Tapestry Tutorial</display-name>
  <context-param>
    <param-name>com.primix.tapestry.asset.dir</param-name>
    <param-value>.build/private-assets</param-value>
  </context-param>
  <context-param>
    <param-name>com.primix.tapestry.asset.URL</param-name>
    <param-value>/private-assets</param-value>
  </context-param>
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>tutorial.hello.HelloWorldServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>simple</servlet-name>
    <servlet-class>tutorial.simple.SimpleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>adder</servlet-name>
    <servlet-class>tutorial.adder.AdderServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>border</servlet-name>
    <servlet-class>tutorial.border.BorderServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>survey</servlet-name>
    <servlet-class>tutorial.survey.SurveyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>hangman</servlet-name>
    <servlet-class>tutorial.hangman.HangmanServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>locale</servlet-name>
    <servlet-class>tutorial.locale.LocaleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>valid</servlet-name>
    <servlet-class>tutorial.valid.ValidServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>portal</servlet-name>
  	<servlet-class>tutorial.portal.PortalServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>simple</servlet-name>
    <url-pattern>/simple/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>adder</servlet-name>
    <url-pattern>/adder/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>survey</servlet-name>
    <url-pattern>/survey/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>border</servlet-name>
    <url-pattern>/border/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>hangman</servlet-name>
    <url-pattern>/hangman/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>locale</servlet-name>
    <url-pattern>/locale/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>valid</servlet-name>
    <url-pattern>/valid/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>portal</servlet-name>
  	<url-pattern>/portal/*</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
