<?xml version="1.0"?>
<!-- $Id$ -->
<!DOCTYPE specification PUBLIC "-//Howard Ship//Tapestry Specification 1.1//EN"
	"http://tapestry.sf.net/dtd/Tapestry_1_1.dtd" [
  <!ENTITY delegate '<binding name="delegate" property-path="delegate"/>'>
  <!ENTITY required '<field-binding name="required" field-name="Boolean.TRUE"/>'>
]>
<specification class="tutorial.valid.Home">
  <property name="foo">bar</property>
  <property name="baz">boop</property>
  <component id="border" type="Border"/>
  <component id="showError" type="ShowError"/>
  <component id="form" type="Form">
    <binding name="listener" property-path="formListener"/>
  </component>
  <component id="labelString" type="FieldLabel">
    <binding name="field" property-path="components.inputString"/>
    &delegate;
  </component>
  <component id="inputString" type="ValidatingTextField">
    <field-binding name="required" field-name="Boolean.TRUE"/>
    <binding name="text" property-path="visit.stringData"/>
    &delegate;
  <static-binding name="displayName">String Data</static-binding>
  </component>
  <component id="labelInteger" type="FieldLabel">
    <binding name="field" property-path="components.inputInteger"/>
    &delegate;
  </component>
  <component id="inputInteger" type="NumericField">
    <field-binding name="minimum" field-name="tutorial.valid.Home.MIN_INT"/>
    <field-binding name="maximum" field-name="tutorial.valid.Home.MAX_INT"/>
    <binding name="value" property-path="visit.intData"/>
	 &required;
    &delegate;
  <static-binding name="displayName">Int Data</static-binding>
  </component>
  <component id="labelDouble" type="FieldLabel">
    <binding name="field" property-path="components.inputDouble"/>
    &delegate;
  </component>
  <component id="inputDouble" type="NumericField">
    <field-binding name="minimum" field-name="tutorial.valid.Home.MIN_DOUBLE"/>
    <field-binding name="maximum" field-name="tutorial.valid.Home.MAX_DOUBLE"/>
    <binding name="value" property-path="visit.doubleData"/>
    &required;
    &delegate;
  <static-binding name="displayName">Double Data</static-binding>
  </component>
  <component id="labelDecimal" type="FieldLabel">
    <binding name="field" property-path="components.inputDecimal"/>
    &delegate;
  </component>
  <component id="inputDecimal" type="NumericField">
    <field-binding name="minimum" field-name="tutorial.valid.Home.MIN_DECIMAL"/>
    <field-binding name="maximum" field-name="tutorial.valid.Home.MAX_DECIMAL"/>
    <binding name="value" property-path="visit.decimalData"/>
    &required;
    &delegate;
  <static-binding name="displayName">Decimal Data</static-binding>
  </component>
  <component id="labelBigInt" type="FieldLabel">
    <binding name="field" property-path="components.inputBigInt"/>
    &delegate;
  </component>
  <component id="inputBigInt" type="NumericField">
    <field-binding name="minimum" field-name="tutorial.valid.Home.MIN_BIGINT"/>
    <field-binding name="maximum" field-name="tutorial.valid.Home.MAX_BIGINT"/>
    <binding name="value" property-path="visit.bigIntData"/>
    &required;
    &delegate;
  <static-binding name="displayName">BigInt Data</static-binding>
  </component>
</specification>
