<!DOCTYPE page-specification PUBLIC 
	"-//Howard Lewis Ship//Tapestry Specification 1.3//EN" 
	"http://tapestry.sf.net/dtd/Tapestry_1_3.dtd">
	
<page-specification class="tutorial.workbench.localization.Change">

  <component id="border" type="Border"/>
 
  <component id="insertLocaleName" type="Insert">
    <binding name="value" property-path="localeName"/>
  </component>
  <component id="back" type="Page">
    <static-binding name="page">Localization</static-binding>
  </component>
  <component id="chooseAgainImage" type="Rollover">
    <binding name="image" property-path="assets.back"/>
    <binding name="focus" property-path="assets.back-focus"/>
  </component>
  <context-asset name="back" path="/images/workbench/Back.gif"/>
  <context-asset name="back-focus" path="/images/workbench/Back-focus.gif"/>
</page-specification>
