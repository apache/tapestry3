<?xml version="1.0"?>
<!--$Id$ -->
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
  <display-name>Tapestry Workbench Example</display-name>
  <servlet>
  	<servlet-name>workbench</servlet-name>
    <servlet-class>org.apache.tapestry.ApplicationServlet</servlet-class>
  	<load-on-startup>0</load-on-startup>
  </servlet>
     
  <servlet-mapping>
  	<servlet-name>workbench</servlet-name>
  	<url-pattern>/app</url-pattern>
  </servlet-mapping>  

  <session-config>
  	<session-timeout>15</session-timeout>
  </session-config>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <taglib>
  	<taglib-uri>http://jakarta.apache.org/tapestry/tld/tapestry_1_0.tld</taglib-uri>
  	<taglib-location>tapestry_1_0.tld</taglib-location>
  </taglib>
</web-app>
